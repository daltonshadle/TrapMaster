<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.coe.djshadle.trapmaster.ProfilesActivity">

    <ImageView
        android:id="@+id/underConstruction_Img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/under_construction_icon"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/underConstruction_Txt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/underConstruction_Img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/under_construction_string"
        android:textAlignment="center"/>

</RelativeLayout>
