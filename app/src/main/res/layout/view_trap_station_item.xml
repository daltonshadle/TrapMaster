<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trapStationItem_Lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@drawable/trap_score_item_main_background">

    <TextView
        android:id="@+id/trapStationShooterName_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="Shooter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trapStationNumber_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:text="Station"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trapStationScore_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="@dimen/TextSizeTrapButton"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/trapStationLane_Lay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trapStationScore_txt">

        <edu.coe.djshadle.trapmaster.TrapTernaryButtonClass
            android:id="@+id/trapBtn1"
            android:layout_width="@dimen/TrapStationButton"
            android:layout_height="@dimen/TrapStationButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/trapBtn2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <edu.coe.djshadle.trapmaster.TrapTernaryButtonClass
            android:id="@+id/trapBtn2"
            android:layout_width="@dimen/TrapStationButton"
            android:layout_height="@dimen/TrapStationButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/trapBtn3"
            app:layout_constraintStart_toEndOf="@id/trapBtn1"
            app:layout_constraintTop_toTopOf="parent" />

        <edu.coe.djshadle.trapmaster.TrapTernaryButtonClass
            android:id="@+id/trapBtn3"
            android:layout_width="@dimen/TrapStationButton"
            android:layout_height="@dimen/TrapStationButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/trapBtn4"
            app:layout_constraintStart_toEndOf="@id/trapBtn2"
            app:layout_constraintTop_toTopOf="parent" />

        <edu.coe.djshadle.trapmaster.TrapTernaryButtonClass
            android:id="@+id/trapBtn4"
            android:layout_width="@dimen/TrapStationButton"
            android:layout_height="@dimen/TrapStationButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/trapBtn5"
            app:layout_constraintStart_toEndOf="@id/trapBtn3"
            app:layout_constraintTop_toTopOf="parent" />

        <edu.coe.djshadle.trapmaster.TrapTernaryButtonClass
            android:id="@+id/trapBtn5"
            android:layout_width="@dimen/TrapStationButton"
            android:layout_height="@dimen/TrapStationButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/trapBtn4"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>