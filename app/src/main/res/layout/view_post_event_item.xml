<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/postEventItem_Lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/trap_score_item_main_background"
    android:padding="8dp">

    <TextView
        android:id="@+id/postEventShooterName_Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/postEventShooterScore_Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="Score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/postEventNotes_Edt"
        android:background="@drawable/white_rounded_rectangle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:padding="4dp"
        android:ems="10"
        android:hint="Notes"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postEventShooterName_Txt" />

    <RelativeLayout
        android:id="@+id/postEventGunSpinBackground_Lay"
        android:background="@drawable/white_rounded_rectangle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/postEventLoadSpinBackground_Lay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postEventNotes_Edt">

        <Spinner
            android:id="@+id/postEventGun_Spin"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/postEventLoadSpinBackground_Lay"
        android:background="@drawable/white_rounded_rectangle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/postEventGunSpinBackground_Lay"
        app:layout_constraintTop_toBottomOf="@+id/postEventNotes_Edt">

        <Spinner
            android:id="@+id/postEventLoad_Spin"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>